@model Trabalho_Login_Encriptado.Models.UsuarioModel
@{
    ViewBag.Title = "Details";
}
<br />
<br />
<h2>Detalhes do Usuário</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <br />
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="row">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disable" } })
            </div>
        </div>
    </div>


    <div class="form-group">
        <div class="row">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", disabled = "disable" } })  
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.Nivel, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Nivel, new { @class = " form-control", disabled = "disable" })
            </div> 
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-md-10">

            @Html.ActionLink("Editar", "Edit", new { id = Model.Id, @class = "btn btn-light" })

            <a class="btn btn-light" href="~/Usuario/Index">Voltar</a>
        </div>
    </div>

}






