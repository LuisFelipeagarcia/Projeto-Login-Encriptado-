@model IEnumerable<Trabalho_Login_Encriptado.Models.UsuarioModel>
@{
    ViewBag.Title = "Index";
}

@{
    string nivel = Session["Nivel"].ToString();
}
<br />
<br />
<h2>Usuários</h2>
<br />

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800"></h1>
    <p class="mb4">Listagem de Usuários</p>

    <p>
        @{ 
            if (nivel == "Administrador")
            {
                <a class="btn btn-primary btn-icon-split btn-sm"
                   href="~/Usuario/Create">
                    <span class="icon text-white">
                        <i class="fas fa-plus-circle"></i>
                    </span>
                    <span class="text"> Adcionar </span>
                </a>    
            }
        }
        

        <!-- DATATABLE-->

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Dobradores</h6>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="sisDataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Nivel)</th>
                                @{ 
                                    if (nivel == "Administrador") 
                                    {
                                        <th scope="col">Funções</th>             
                                    }
                                }
                                
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nivel)
                                        </td>
                                        @{ 
                                            if (nivel == "Administrador") 
                                            {
                                            <td>
                                                @Html.ActionLink("Editar", "edit", new { id = item.Id }) |
                                                @Html.ActionLink("Detalhes", "details", new { id = item.Id }) |
                                                @Html.ActionLink("Apagar", "delete", new { id = item.Id }) |
                                            </td>    
                                            }
                                        }
                                        
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </p>

</div>

