@model Trabalho_Login_Encriptado.Models.UsuarioModel
@{
    ViewBag.Title = "Edit";
}
<br />
<br />
<h2>Editar Usuário</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <br />
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="row">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>

        </div>
        <div class="row">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })

            </div>

        </div>
        <div class="row">
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>


    <div class="form-group">
        <div class="row">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    

    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.Nivel, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                @Html.RadioButtonFor(model => model.Nivel, "Administrador")Administrador
            </div>
            <div class="col-md-3">
                @Html.RadioButtonFor(model => model.Nivel, "Operador")Operador
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.Nivel, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary btn-icon-split">
                <span class="icon text-white-50">
                    <i class="far fa-save"></i>
                </span>
                <span class="text">Salvar</span>
            </button>
            <a class="btn btn-light" href="~/Usuario/Index">Voltar</a>
        </div>
    </div>

}






