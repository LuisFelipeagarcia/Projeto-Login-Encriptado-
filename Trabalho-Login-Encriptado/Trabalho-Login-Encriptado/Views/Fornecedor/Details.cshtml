@model Trabalho_Login_Encriptado.Models.FornecedorModel
@{
    ViewBag.Title = "Details";
}
@{
    string nivel = Session["Nivel"].ToString();
}
<h2>Detalhes do Fornecedor</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <br />
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="row">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>

        </div>
        <div class="row">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disable" } })

            </div>
        </div>
        
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", disabled = "disable" } })
                
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-5">
                @Html.LabelFor(model => model.Telefone, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-5">
                @Html.LabelFor(model => model.CNPJ, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-5">
                @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", disabled = "disable" } })
            </div>
            <div class="col-md-5">
                @Html.EditorFor(model => model.CNPJ, new { htmlAttributes = new { @class = "form-control", disabled = "disable" } })
            </div>
        </div>
        
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-md-10">
            @{
                if (nivel == "Administrador")
                {
                    @Html.ActionLink("Editar", "Edit", new { id = Model.Id, @class = "btn btn-light" })
                }
            }

            <a class="btn btn-light" href="~/Fornecedor/Index">Voltar</a>
        </div>
    </div>

}




