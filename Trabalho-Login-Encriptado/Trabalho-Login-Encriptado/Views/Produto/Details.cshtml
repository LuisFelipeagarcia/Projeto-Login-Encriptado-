@model Trabalho_Login_Encriptado.Models.ProdutoModel
@{
    ViewBag.Title = "Details";
}
@{
    string nivel = Session["Nivel"].ToString();
}
<br />
<h2>Detalhes do Produto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <br />
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="row">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>

        </div>
        <div class="row">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", disabled = "disable" } })

            </div>

        </div>
        <div class="row">
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>


    <div class="form-group">
        <div class="row">
            <div class="col-md-5">
                @Html.LabelFor(model => model.Qtde_Estoque, htmlAttributes: new { @class = "control-label " })
            </div>
            <div class="col-md-5">
                @Html.LabelFor(model => model.Custo, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-5">
                @Html.EditorFor(model => model.Qtde_Estoque, new { htmlAttributes = new { @class = "form-control", disabled = "disable" } })
                @Html.ValidationMessageFor(model => model.Qtde_Estoque, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-5">
                @Html.EditorFor(model => model.Custo, new { htmlAttributes = new { @class = "form-control", disabled = "disable" } })
                @Html.ValidationMessageFor(model => model.Custo, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">

            <div class="col-md-10">
                @Html.LabelFor(model => model.FornecedorId, "Fornecedor", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>
        <div class="row">


            <div class="col-md-10">

                @Html.TextBoxFor(model => model.Fornecedor.Nome, new { @class = " form-control", disabled = "disable" })
            </div>
        </div>
        <div class="row">

            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.FornecedorId, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-md-10">
            @{
                if (nivel == "Administrador")
                {
                    @Html.ActionLink("Editar", "Edit", new { id = Model.Id, @class = "btn btn-light" })
                }
            }
            <a class="btn btn-light" href="~/Produto/Index">Voltar</a>
        </div>
    </div>

}


